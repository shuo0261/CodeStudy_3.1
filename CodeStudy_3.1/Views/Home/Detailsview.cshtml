@model HomeDetailsViewModel
@{
    //Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "学生详情页";
    @*单文件上传*@
    var photoPath = "~/images/" + (Model.student.PhotoPath ?? "image1.png");
    @*多文件上传 *@
    @*var photoPath = "~/images/image1.png";
