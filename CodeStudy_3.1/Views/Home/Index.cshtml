@{
    // Layout = "~/Views/Shared/_Layout.cshtml";
    //如果我们不希望在不使用布局视图的情况下渲染视图，只需要将Layout设置为null，即Layout=null；
    ViewBag.Title = "学生列表页";
}

<div class="card-deck">
    @foreach(var student in Model)
    {
        <div class="card m-3">
            <div class="card-header">
                <h3 class="card-title">@student.Name</h3>
            </div>
            <img class="card-img-top" src="~/images/image1.png">
            <div class="card-body text-center">
                <h5>专业:@student.Major</h5>
            </div>

            <div class="card-footer text-center">
                <a href="#" class="bth btn-primary">返回</a>
                <a href="Detailsview" class="bth btn-primary">编辑</a>
                <a href="#" class="bth btn-danger">删除</a>
            </div>
        </div>
    }
</div>

