    {
        photoPath = "~/images/" + Model.student.PhotoPath;
    }*@
}

<h3>@Model.PageTiles</h3>
<div class="row justify-content-center m-3">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-header">
                <h1>@Model.student.Name</h1>
            </div>
            <div class="card-img-top text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true">
                <h4>学生ID:@Model.student.Id</h4>
                <h4>班级：@Model.student.Calssroom</h4>
                <h4>专业：@Model.student.Major</h4>
                <h4>邮箱：@Model.student.Email</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Index" class="bth btn-primary">返回</a>
                <a asp-controller="Home" asp-action="Edit" asp-route-Id="@Model.student.Id" class="bth btn-primary">编辑</a>
                <a asp-controller="Home" asp-action="Delte" asp-route-Id="@Model.student.Id" class="bth btn-danger">删除</a>
            </div>
        </div>
    </div>
</div>

